{
  "name": "graphql-fusion",
  "version": "0.1.1",
  "description": "Merge GraphQL Queries",
  "main": "fusion.js",
  "typings": "fusion.d.ts",
  "author": "Tzvi Melamed <tzvi@melamed.biz>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf '*.{js,d.ts}'",
    "prebuild": "yarn run clean",
    "build": "tsc",
    "prepublish": "in-publish && yarn run build || :"
  },
  "private": false,
  "devDependencies": {
    "@types/jest": "^22.1.1",
    "in-publish": "^2.0.0",
    "jest": "^22.1.4",
    "jest-junit": "^3.5.0",
    "npm-run-all": "^4.0.2",
    "prettier": "1.10.2",
    "rimraf": "^2.6.1",
    "ts-jest": "^22.0.3",
    "typescript": "^2.7.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "graphql": "^0.12.3",
    "graphql-tag": "^2.6.1",
    "uuid": "^3.2.1"
  }
}
